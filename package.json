{
  "name": "wordtris",
  "version": "1.0.0",
  "type": "module",
  "description": "A modern JavaScript word puzzle game combining Tetris mechanics with word formation",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000",
    "serve": "python -m http.server 8000",
    "dev": "python -m http.server 8080",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "game",
    "javascript",
    "html5",
    "canvas",
    "word-game",
    "puzzle",
    "tetris"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/wordtris"
  },
  "bugs": {
    "url": "https://github.com/yourusername/wordtris/issues"
  },
  "homepage": "https://github.com/yourusername/wordtris#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
